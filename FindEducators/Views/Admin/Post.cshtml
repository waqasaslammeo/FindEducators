@using FindEducators.Common

@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list" style="font-size: 20px;text-transform: uppercase;">
                        Posts<small style="font-size: 12px;">ENTRY FORM</small>
                    </i>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
               @using (Html.BeginForm("Post", "Admin", FormMethod.Post, new {@class = "form-horizontal"}))
               {
                   <div class="container-fluid">
                       <div class="row">
                           <div class="col-md-6">
                               <div class="form-body">
                                   
                                   @{
                                        
                                       var tempPost = ViewBag.Post;


                                   }

                                   <div class="form-group" style="margin: 53px 0px 0px 0px">
                                       <div class="col-md-12">
                                           <input type="hidden" name="Id" id="txtPostId" value="@tempPost.Id">
                                           <input type="text" class="form-control" name="PostTitle" value="@tempPost.PostTitle" placeholder="Post Title" />
                                           <input type="text" class="form-control" name="PostDate" value="@tempPost.PostDate" placeholder="Post Date" />
                                           <input type="text" class="form-control" name="PostedBy" value="@tempPost.PostedBy" placeholder="Posted By" />
                                           <input type="text" class="form-control" name="PostTypeId" value="@tempPost.PostTypeId" placeholder="Post Type Id" />
                                       </div>
                                   </div>

                               </div>
                           </div>
                           <div class="col-md-6">

                               <div style="margin: 20px 0px 0px 0px">
                                   <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                       <thead>
                                           <tr>
                                               <th>
                                                   Post Title
                                               </th>
                                               <th>

                                               </th>
                                               <th>

                                               </th>
                                           </tr>
                                       </thead>
                                       <tbody>
                                           
                                            @foreach (var post in  ViewBag.PostList)
                                            {
                                                <tr>
                                                    <td class="center">
                                                        @post.PostTitle
                                                    </td>
                                                    <td style="width: 20px;">
                                                        <a class="edit" href='@Url.Action("Post", "Admin",new{id=post.Id})' >
                                                            <img src=" @AdminCommonResources.IMG_EDIT " style=" width 18px;">
                                                        </a>
                                                    </td>
                                                    <td style="width: 20px;">
                                                        <a class="delete" href='@Url.Action("DeletePost", "Admin",new{id=post.Id})'>
                                                            <img src="@AdminCommonResources.IMG_DELETE" style="width: 18px;">
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                       </tbody>
                                   </table>
                               </div>
                           </div>
                       </div>
                   </div>

                   <div class="form-actions">
                       <div class="row">
                           <div class="col-md-offset-3 col-md-9">
                               <button type="submit" class="btn green">Submit</button>
                               <button type="button" class="btn default">Cancel</button>
                           </div>
                       </div>
                   </div>
               }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
<div class="clearfix">
</div>



