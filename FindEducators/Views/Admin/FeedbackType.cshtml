@using FindEducators.Common
@using FindEducators.Controllers
@model FindEducators.Models.FeedbackType
@{
    ViewBag.Title = "FeedbackType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list" style="font-size: 20px;text-transform: uppercase;">
                        Feedback type Name <small style="font-size: 12px;">ENTRY FORM</small>
                    </i>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("FeedbackType", "Admin", FormMethod.Post, new {@class = "form-horizontal"}))
                {
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-body">
                                                @{
                                            var tempFeedbacktype = ViewBag.FeedbackType;
                                                }
                                    <div class="form-group" style="margin: 53px 0px 0px 0px">
                                        <div class="col-md-12">
                                            <input type="hidden" name="Id" id="txtFeedbackTypeId" value="@tempFeedbacktype.Id">
                                            <input type="text" class="form-control" name="FeedbackTypeName" value="@tempFeedbacktype.FeedbackTypeName" placeholder="FeedbackType Name" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">

                                <div style="margin: 20px 0px 0px 0px">
                                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Feedback Type Name
                                                </th>
                                                <th>

                                                </th>
                                                <th>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var feedbacktype in ViewBag.FeedbackTypeList)
                                            {
                                            <tr>
                                                <td class="center">
                                                    @feedbacktype.FeedbackTypeName;
                                                </td>
                                                <td style="width: 20px;">
                                                    <a class="edit" href='@Url.Action("FeedbackType", "Admin", new { id = feedbacktype.Id })'>
                                                        <img src="@AdminCommonResources.IMG_EDIT" style="width: 18px;">
                                                    </a>
                                                </td>
                                                <td style="width: 20px;">
                                                    <a class="delete" href='@Url.Action("DeleteFeedbackType", "Admin", new { id = feedbacktype.Id })'>
                                                        <img src="@AdminCommonResources.IMG_DELETE" style="width: 18px;">
                                                    </a>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                                <button type="button" class="btn default">Cancel</button>
                            </div>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
<div class="clearfix">
</div>
